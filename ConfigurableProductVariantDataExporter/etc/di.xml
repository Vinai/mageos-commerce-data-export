<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Magento\ProductVariantDataExporter\Model\Provider\ProductVariants">
        <arguments>
            <argument name="variantsProviders" xsi:type="array">
                <item name="configurable" xsi:type="object">\Magento\ConfigurableProductVariantDataExporter\Model\Provider\Product\ConfigurableVariants</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\ProductVariantDataExporter\Model\Provider\ProductVariants\OptionValueFactory">
        <arguments>
            <argument name="variantTypes" xsi:type="array">
                <item name="configurable" xsi:type="string">Magento\ConfigurableProductVariantDataExporter\Model\Provider\Product\ProductVariants\ConfigurableOptionValue</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\ProductVariantDataExporter\Model\Provider\ProductVariants\IdFactory">
        <arguments>
            <argument name="variantTypes" xsi:type="array">
                <item name="configurable" xsi:type="string">Magento\ConfigurableProductVariantDataExporter\Model\Provider\Product\ProductVariants\ConfigurableId</item>
            </argument>
        </arguments>
    </type>
    <type name="Magento\Catalog\Model\ResourceModel\Product">
        <plugin name="reindex_configurable_variants_after_save" type="Magento\ConfigurableProductVariantDataExporter\Plugin\ReindexVariantsAfterSave"/>
    </type>
</config>
