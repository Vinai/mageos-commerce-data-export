<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="inventory_data_exporter_stock_status" resource="default" engine="innodb" comment="Inventory Stock Status Feed Storage">
        <column xsi:type="varchar"
                name="stock_id"
                nullable="false"
                length="64"
                comment="Stock ID"
        />
        <column xsi:type="varchar"
                name="sku"
                nullable="false"
                length="64"
                comment="Product SKU"
        />
        <column
            xsi:type="mediumtext"
            name="feed_data"
            nullable="false"
            comment="Feed Data"
        />
        <column
            xsi:type="timestamp"
            name="modified_at"
            on_update="true"
            nullable="false"
            default="CURRENT_TIMESTAMP"
            comment="Created At"
        />
        <column
            xsi:type="tinyint"
            name="is_deleted"
            nullable="false"
            default="0"
            comment="Stock Item Status Deleted"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="stock_id"/>
            <column name="sku"/>
        </constraint>
        <index referenceId="inventory_data_exporter_stock_status_modified_at" indexType="btree">
            <column name="modified_at"/>
        </index>
    </table>
</schema>
